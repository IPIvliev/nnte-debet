<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Дебиторская задолженность", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Главная", root_path %></li>
          <li><%= link_to "Помощь", help_path %></li>
          <% if signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Базы данных <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Организации", agents_path %></li>
                <li><%= link_to "Обзвон", current_user %></li>
                <li><%= link_to "Суд", '/courts' %></li>
                <li><%= link_to "Финансы", finances_path %></li>
              </ul>
            </li>

            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Профайл", current_user %></li>
                <li><%= link_to "Настройки", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Выход", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Регистрация", signup_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>